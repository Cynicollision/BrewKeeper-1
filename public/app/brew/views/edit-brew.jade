.container
    .col-md-2
    .well.col-md-8
        form.form-horizontal(name="addBrewForm")
            fieldset
                legend Brew Information
                .form-group
                    label.col-md-4.control-label(for="brewRecipe") Recipe
                    .col-md-6
                        select.form-control(name="brewRecipe", ng-model="brewRecipe", ng-options="recipe.name for recipe in recipes")
                .form-group
                    label.col-md-4.control-label(for="brewBatchSize") Batch size (gallons)
                    .col-md-4
                        input.form-control(type="number", name="brewBatchSize", ng-model="brewBatchSize", min=1, max=999, maxlength=3, required)
                .form-group
                    label.col-md-4.control-label(for="brewDescription") Description
                    .col-md-6
                        input.form-control(type="text", name="brewDescription", ng-model="brewDescription", placeholder="Brew details")
                .form-group
                    label.col-md-4.control-label(for="brewStatusCde") Status
                    .col-md-6
                        select.form-control(name="brewStatusCde", ng-model="brewStatusCde", ng-options="status.name for status in statuses")
                .form-group
                    label.col-md-4.control-label(for="brewBrewDate") Brew date
                    .col-md-6
                        input.datepicker.add-on.form-control(type='text', name="brewBrewDate", ng-model="brewBrewDate", placeholder="In the jug")
                .form-group
                    label.col-md-4.control-label(for="brewBottleDate") Bottle date
                    .col-md-6
                        input.datepicker.add-on.form-control(type="text", name="brewBottleDate", ng-model="brewBottleDate", placeholder="In the bottles")
                .form-group
                    label.col-md-4.control-label(for="brewChillDate") Chill date
                    .col-md-6
                        input.datepicker.add-on.form-control(type="text", name="brewChillDate", ng-model="brewChillDate", placeholder="In the fridge")
                .form-group
                    .div(style="text-align:center")
                        button.btn.btn-primary(ng-click="submitBrew()", ng-disabled="signupForm.$invalid") Save
                        | &nbsp;
                        a.btn.btn-default(href="/brews/") Cancel
