.container
    .col-md-8.col-md-offset-2
        h1 Brew Details
    .col-md-8.col-md-offset-2
        table.table.table-bordered
            tbody
                tr
                    td.col-md-4 Batch name
                    td {{ brew.name }}
                tr
                    td Recipe
                    td 
                        a(href="/recipe/view/{{ brew.recipeId }}") {{ recipeName }}
                tr
                    td Description
                    td {{ brew.description }}
                tr
                    td Batch size
                    td {{ brew.batchSize }} gallon(s)
                tr
                    td Status
                    td {{ statusLookup.getDisplay(brew.statusCde) }}
                tr
                    td Brew date
                    td {{ brew.brewDate | date:'M/d/yyyy' }}
                tr
                    td Bottle date
                    td {{ brew.bottleDate | date:'M/d/yyyy' }}
                tr
                    td Chill date
                    td {{ brew.chillDate | date:'M/d/yyyy' }}
    .col-md-8.col-md-offset-2
        .btn.btn-danger(ng-click="doDelete()", ng-show="isBrewOwnedByCurrentUser()")  
            .pull-right &nbsp;Delete
            span.glyphicon.glyphicon-remove 
        .pull-right
            .btn.btn-default(ng-click="doEdit()", ng-show="isBrewOwnedByCurrentUser()") 
                .pull-right &nbsp;Modify
                span.glyphicon.glyphicon-pencil  