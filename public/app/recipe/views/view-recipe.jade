.container
    .col-md-8.col-md-offset-2
         h1 Recipe Details
    .col-md-8.col-md-offset-2
        table.table.table-bordered
            tbody
                tr
                    td Name
                    td {{ recipe.name }}
                tr
                    td Source
                    td 
                        a(href="{{ recipe.sourceUrl }} ", target="_blank") {{ recipe.sourceName }}
                tr
                    td Times Brewed
                    td {{ recipe.timesBrewed }}
                tr
                    td Description
                    td {{ recipe.description }}
                
    .col-md-8.col-md-offset-2
        .btn.btn-danger(ng-click="doDelete()", ng-show="isRecipeOwnedByCurrentUser()")
            .pull-right &nbsp;Delete
            span.glyphicon.glyphicon-remove 
        .pull-right
            .btn.btn-default(ng-click="doEdit()", ng-show="isRecipeOwnedByCurrentUser()") 
                .pull-right &nbsp;Modify
                span.glyphicon.glyphicon-pencil  