.container
    h1 Brew Details
    .row
        .col-md-8  
            table.table.table-bordered
                tbody
                    tr
                        td.col-md-4 Batch number
                        td [brew.batchNum]
                    tr
                        td Recipe
                        td {{ brew.recipeId }}
                    tr
                        td Current status
                        td {{ brew.statusCde }}
                    tr
                        td Brew date
                        td {{ brew.brewDate }}
                    tr
                        td Bottle date
                        td {{ brew.bottleDate }}
                    tr
                        td Chill date
                        td {{ brew.chillDate }}
                
        .col-md-4
            .btn-group
                .btn.btn-default(href="/brews/edit/{{brew._id}}" ng-show="isBrewOwner()") Edit
                .btn.btn-danger(href="/brews/delete/{{brew._id}}" ng-show="isBrewOwner()") Delete  