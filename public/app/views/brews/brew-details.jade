.container
    h1 {{brew.name}}
        .row
            .col-md-6
                h3(ng-show="brew.featured") Featured
                h3 Brewed on {{ brew.brewedOn | date }}
        .row
            .col-md-6
                span
                    a(href="/brews/edit/{{brew._id}}" ng-show="isBrewOwner()") Edit
                    a(href="/brews/delete/{{brew._id}}" ng-show="isBrewOwner()") Delete
            .col-md-6
                .panel.panel-primary
                    .panel-heading Tags
                    .panel-body
                        div(ng-repeat="tag in brew.tags") {{ tag }}